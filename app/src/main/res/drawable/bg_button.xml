<?xml version="1.0" encoding="utf-8"?><!--<ripple xmlns:android="http://schemas.android.com/apk/res/android"-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/secondary_blue_varient" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/secondary_blue" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/btn_grey" />
        </shape>
    </item>
</selector>