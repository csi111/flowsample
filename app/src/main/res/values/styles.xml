<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeadH5">
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="HeadH1White">
        <item name="android:textSize">23sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HeadH1">
        <item name="android:textSize">23sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/TextInputLayoutStyleColor</item>
        <item name="hintTextAppearance">@style/TextInputLayout.Hint</item>
    </style>


    <style name="TextInputLayoutStyleColor">
        <item name="android:colorControlActivated">#3187e7</item>
        <item name="android:colorControlNormal">#4c000000</item>
        <item name="android:colorControlHighlight">#4c000000</item>
    </style>

    <style name="GrTitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="TextInputLayout.Hint" parent="@android:style/TextAppearance">
        <item name="android:textColor">#4c000000</item>
        <item name="android:textColorHighlight">#4c000000</item>
        <item name="android:textColorHint">#4c000000</item>
        <item name="android:textColorLink">#4c000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>